<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.saurabh.popularmovies2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.saurabh.popularmovies2.ui.activities.MovieGridActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.saurabh.popularmovies2.ui.activities.MovieDetailsActivity"
            android:parentActivityName=".ui.activities.MovieGridActivity"/>

        <provider
            android:name=".data.provider.MovieProvider"
            android:authorities="com.saurabh.popularmovies.app">
        </provider>

    </application>
</manifest>
